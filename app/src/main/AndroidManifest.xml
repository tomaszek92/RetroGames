<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.retrogames.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true">
        <activity
            android:name="com.retrogames.app.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.retrogames.app.ChooseGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogames.app.BestScoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogames.app.tetris.TetrisActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.retrogames.app.tanks.TanksActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".race.RaceActivity"
            android:screenOrientation="portrait"/>
    </application>
    
    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest>
